<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>in.voidma.classroom</groupId>
    <artifactId>network</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <developers>
        <developer>
            <id>ThatTigGuy</id>
            <name>Miles Silberling-Cook</name>
            <email>thattigguy@gmail.com</email>
        </developer>
        <developer>
            <id>KingKondak</id>
            <name>Zane Alvarez</name>
            <email>zane.alvarez@griffinschool.org</email>
        </developer>
        <developer>
            <id>Sam1920Chanow</id>
            <name>Sam Chanow</name>
            <email>sam.chanow@griffinschool.org</email>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>org.processing</groupId>
            <artifactId>core</artifactId>
            <version>3.2.3</version>
        </dependency>
        <dependency>
            <groupId>io.netty</groupId>
            <artifactId>netty-all</artifactId>
            <version>4.1.8.Final</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.5</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>21.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.5</version>
        </dependency>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
            <version>3.0.2</version>
        </dependency>
        <dependency>
            <groupId>common.local</groupId>
            <artifactId>fisica</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>common.local</groupId>
            <artifactId>controlp5</artifactId>
            <version>2.2.4</version>
        </dependency>
        <dependency>
            <groupId>common.local</groupId>
            <artifactId>box2d</artifactId>
            <version>2.0.1</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2.1</version>
                <executions>
                    <execution>
                        <id>client</id>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>in.voidma.classroom.network.client.Client</mainClass>
                        </configuration>
                    </execution>
                    <execution>
                        <id>server</id>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>in.voidma.classroom.network.server.Sever</mainClass>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.1</version>
                <executions>
                    <execution>
                        <id>install-fisica</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                        <configuration>
                            <groupId>common.local</groupId>
                            <artifactId>fisica</artifactId>
                            <version>1.0</version>
                            <packaging>jar</packaging>
                            <file>${basedir}/dependencies/fisica-1.0.jar</file>
                            <generatePom>true</generatePom>
                            <!--<localRepositoryPath>${basedir}/repo</localRepositoryPath>-->
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-controllP5</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                        <configuration>
                            <groupId>common.local</groupId>
                            <artifactId>controlP5</artifactId>
                            <version>2.2.4</version>
                            <packaging>jar</packaging>
                            <file>${basedir}/dependencies/controlP5.jar</file>
                            <generatePom>true</generatePom>
                            <!--<localRepositoryPath>${basedir}/repo</localRepositoryPath>-->
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-box2D</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                        <configuration>
                            <groupId>common.local</groupId>
                            <artifactId>box2d</artifactId>
                            <version>2.0.1</version>
                            <packaging>jar</packaging>
                            <file>${basedir}/dependencies/JBox2D-2.0.1.jar</file>
                            <generatePom>true</generatePom>
                            <!--<localRepositoryPath>${basedir}/repo</localRepositoryPath>-->
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>